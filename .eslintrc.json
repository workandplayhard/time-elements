{
  "root": true,
  "extends": [
    "plugin:github/browser",
    "plugin:github/recommended",
    "plugin:github/typescript"
  ],
  "overrides": [
    {
      "files": "test/**/*.js",
      "rules": {
        "github/unescaped-html-literal": "off"
      }
    },
    {
      "files": "test/**/*.js",
      "excludedFiles": "test/karma.config.cjs",
      "env": {
        "mocha": true
      },
      "globals": {
        "assert": true
      }
    }
  ]
}
